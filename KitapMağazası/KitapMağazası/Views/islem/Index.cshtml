@using KitapMağazası.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan  Kitap Listesi</h2>
<table class="table table-bordered">
    <tr style="background-color: #c60000">
        <th> İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.TBLKITAP.AD</td>
            <td>@k.TBLUYELER.AD&nbsp; @k.TBLUYELER.SOYAD</td>
            <td>@k.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARİH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.UYEGETIRTARIH).ToString("dd/MM/yyyy")</td>

            <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-default" style="background-color:#d31b02; color:white">Detaylar</a></td>

        </tr>
    }
</table>





