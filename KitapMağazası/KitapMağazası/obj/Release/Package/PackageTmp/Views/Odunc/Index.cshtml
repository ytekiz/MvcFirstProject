@using KitapMağazası.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>
<table class="table table-bordered">
    <tr style="background-color:#838b8b">
        <th> İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade  Al</th>

    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.ID</td>
    <td>@k.TBLKITAP.AD</td>
    <td>@k.TBLUYELER.AD&nbsp; @k.TBLUYELER.SOYAD</td>
    <td>@k.PERSONEL</td>
    <td>@Convert.ToDateTime(k.ALISTARİH).ToString("dd/MM/yyyy")</td>
    <td>@Convert.ToDateTime(k.İADETARİH).ToString("dd/MM/yyyy")</td>

    <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-default" style="background-color:#838b8b;
        color: white">Kitabı İade Et</a></td>

</tr>
    }
</table>



